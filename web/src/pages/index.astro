---
import Html from "../layouts/HtmlLayout.astro";
import logo from "../images/Logo-Sigue-Adelante-Header-1-1-scaled.jpg";
import { Image } from "astro:assets";
import {
  Reproductor,
  MainMenu,
  CustomNavbar,
  CarouselNews,
} from "../components/base";
---

<Html title="Welcome to Astro.">
  <!-- <CustomNavbar client:visible />
  <div class="h-full bg-yellow-background">
